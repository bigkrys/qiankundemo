# 生产阶段
FROM nginx:alpine

# 复制 nginx 配置
COPY nginx.conf /etc/nginx/conf.d/default.conf

# 复制本地构建产物
COPY packages/main-app/dist /usr/share/nginx/html/main
COPY packages/sub-app1/dist /usr/share/nginx/html/sub-app1
COPY packages/sub-app2/dist /usr/share/nginx/html/sub-app2

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"] 